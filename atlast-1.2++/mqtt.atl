: publish
    init
    client @ "/home/office/proliant/testing" "ATLAST" mqtt-pub .s

;

mk-string t
mk-string p

: mqtt-dump
    mqtt-q-empty if
        "Nothing to say" type cr
    else
        t p mqtt-q-get 
        "Topic :" type t cout cr
        "Msg   :" type p cout cr
        "Depth :" type mqtt-q-size . cr
    then
;


